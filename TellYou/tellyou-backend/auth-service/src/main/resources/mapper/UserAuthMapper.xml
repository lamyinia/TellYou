<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.com.auth.infrastructure.persistence.mapper.UserAuthMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="org.com.auth.infrastructure.persistence.po.UserAuthDO">
        <id column="user_id" property="userId"/>
        <result column="email" property="email"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="account_status" property="accountStatus"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 插入用户认证信息 -->
    <insert id="insert" parameterType="org.com.auth.infrastructure.persistence.po.UserAuthDO">
        INSERT INTO user_auth (user_id, email, password_hash, account_status, create_time)
        VALUES (#{userId}, #{email}, #{passwordHash}, #{accountStatus}, #{createTime})
    </insert>

    <!-- 更新用户认证信息 -->
    <update id="update" parameterType="org.com.auth.infrastructure.persistence.po.UserAuthDO">
        UPDATE user_auth
        <set>
            <if test="email != null">email = #{email},</if>
            <if test="passwordHash != null">password_hash = #{passwordHash},</if>
            <if test="accountStatus != null">account_status = #{accountStatus},</if>
        </set>
        WHERE user_id = #{userId}
    </update>

    <!-- 根据用户ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT user_id, email, password_hash, account_status, create_time
        FROM user_auth
        WHERE user_id = #{userId}
    </select>

    <!-- 根据邮箱查询 -->
    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT user_id, email, password_hash, account_status, create_time
        FROM user_auth
        WHERE email = #{email}
    </select>

    <!-- 检查邮箱是否存在 -->
    <select id="existsByEmail" resultType="boolean">
        SELECT COUNT(1) > 0
        FROM user_auth
        WHERE email = #{email}
    </select>

    <!-- 删除用户认证信息 -->
    <delete id="deleteById">
        DELETE FROM user_auth
        WHERE user_id = #{userId}
    </delete>

</mapper>
